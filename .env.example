# FIRS E-Invoice SDK Configuration
# Copy this file to .env and update with your actual credentials

# FIRS API Configuration
FIRS_API_KEY=your_api_key_here
FIRS_API_SECRET=your_api_secret_here
FIRS_BASE_URL=https://api.firs.gov.ng/api/v1

# Business Information
FIRS_BUSINESS_ID=your_business_id
FIRS_BUSINESS_NAME=Your Business Name Ltd
FIRS_TIN=12345678

# Business Address
FIRS_BUSINESS_EMAIL=info@yourbusiness.ng
FIRS_BUSINESS_PHONE=08012345678
FIRS_BUSINESS_ADDRESS_STREET=123 Business Street
FIRS_BUSINESS_ADDRESS_CITY=Lagos
FIRS_BUSINESS_ADDRESS_STATE=LA
FIRS_BUSINESS_ADDRESS_POSTAL=101241

# VAT Information (Optional)
FIRS_BUSINESS_VAT_NUMBER=VAT123456

# Operational Settings
FIRS_TIMEOUT=30
FIRS_MAX_RETRIES=3
FIRS_CACHE_TTL=3600
FIRS_VERIFY_SSL=true

# Output Configuration
FIRS_OUTPUT_DIR=./output
FIRS_LOG_LEVEL=INFO
FIRS_LOG_FILE=

# Feature Flags
FIRS_ENABLE_CACHING=true
FIRS_ENABLE_RETRY=true
FIRS_ENABLE_VALIDATION=true
FIRS_DEBUG_MODE=false

# Cryptographic Settings (Optional)
# Path to your private key and certificate for digital signing
FIRS_PRIVATE_KEY_PATH=
FIRS_CERTIFICATE_PATH=
FIRS_KEY_PASSWORD=

# Proxy Configuration (Optional)
# Uncomment and set if you need to use a proxy
# FIRS_PROXY_URL=http://proxy.example.com:8080
# FIRS_PROXY_USERNAME=
# FIRS_PROXY_PASSWORD=